<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#365180"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TenderDetails">

    <EditText
        android:id="@+id/btnfraud2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnfraud5"
        android:layout_alignStart="@+id/btnfraud5"
        android:layout_marginBottom="-210dp"
        android:ems="10"
        android:hint="Enter ID"
        android:inputType="number"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/btnfraud5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:hint="Enter Phone"
        android:inputType="phone"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />


    <Button
        android:id="@+id/btnsub4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnfraud2"
        android:layout_marginBottom="56dp"
        android:background="#53190c"
        android:text="Submit"
        android:textColor="#f7f9fa" />

    <EditText
        android:id="@+id/btntend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnfraud2"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/btntend2"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="#224915"
        android:text="Tender Details"
        android:textColor="#22f7f9fa"
        android:textColorHint="#ce1943"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/btntend1"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnfraud2"
        android:layout_marginBottom="207dp"
        android:ems="10"
        android:hint="kind of Tender "
        android:inputType="textPersonName"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />


</RelativeLayout>