<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#221e1f76"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApointmenActivity">

    <EditText
        android:id="@+id/btndetails2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btntext8"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:hint="Enter ID"
        android:inputType="number"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/btndetails1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btndetails2"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter Phone"
        android:inputType="phone"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnfraud2"
        android:layout_below="@+id/btnfraud5"
        android:layout_marginTop="-179dp"
        android:text="Group"
        android:textColor="#f9fcff" />

    <RadioButton
        android:id="@+id/radiobutton2"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnfraud2"
        android:layout_below="@+id/radioButton"
        android:text="Single"
        android:textColor="#f9fcff" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="74dp"
        android:background="#53190c"
        android:text="Submit"
        android:textColor="#f7f9fa" />

    <EditText
        android:id="@+id/btntext8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/btndetails5"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="#224915"
        android:text="APPOINTMENT DETAILS"
        android:textColor="#22f7f9fa"
        android:textColorHint="#ce1943"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/btndetails3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btndetails2"
        android:layout_marginBottom="175dp"
        android:ems="10"
        android:hint="Reason for Appointment"
        android:inputType="textPersonName"
        android:textColor="#6b252e"
        android:textColorHint="#ffffff" />

</RelativeLayout>